	_cTar = cursortarget;
	_knowabouts = _unit knowsabout _cTar; 
	if (_unit == player && _knowabouts > 0 && _cTar iskindof "MAN" && alive _cTar) then 
	{ 
 
		if (side _unit != side _cTar) then 
		{ 
			_azimuth = getDir _unit; 
			_direction = lolo; 
